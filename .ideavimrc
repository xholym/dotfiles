" Does this work? Sometimes looks like yes, other time no
source ~/.vimrc

set smartindent
set ideajoin    " join lines smartly with idea
set visualbell  " noerrorbells do not work


" Plgins
set surround
set commentary
set textobj-entire
set ReplaceWithRegister
set highlightedyank
set argtextobj
set ReplaceWithRegister

" tab navigation
" A is alt in IDEAvim instead of M
" Must be configured in IDEA
"nnoremap <A-l> PreviousTab<CR>
"nnoremap <A-h> NextTab<CR>

" --- Vim mappings ---
" Vimrc duplicates:
set number		    " make current line number not relative
set relativenumber	" enable relative line numbers

set autoindent      " enable indetation
set smartindent	    " try to indent for me
set tabstop=4	    " make tab 4 spaces
set softtabstop=4   " make soft tab 4 spaces
set shiftwidth=4    " also make 4 spaces
set expandtab       " convert tabs to spaces

set nowrap		   	" dont wrap lines
set smartcase       " ignore case during search unless there is a Capital letter
set incsearch       " incrementaly show search results
set hlsearch        " highlight searches
set showmatch       " hightlight matching braces

set showcmd         " show partial commnand in the bottom

" This does not get sourced from vimrc
nnoremap // :noh<CR>

nnoremap <SPACE> <Nop>
let mapleader = " "

nnoremap <C-l> <C-w>l
nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap + :vertical resize +5<CR>
nnoremap _ :vertical resize -5<CR>

" Tabs navigation
nnoremap <M-h> :tabp<CR>
nnoremap <M-l> :tabn<CR>

" -- Main mappings --

inoremap jj <ESC>

nnoremap // :noh<CR>     " clear search

" Keep visual selection when indenting
vnoremap > >gv
vnoremap < <gv

" Create new lines in and stay in normal mode
nmap zj o<Esc>k
nmap zk O<Esc>j

" -- Yanking --
nnoremap Y y$
nnoremap zp "*p
nnoremap zy "*y
nnoremap zY "*Y
nnoremap zP "*P
vnoremap zy "*y
vnoremap zY "*Y


" --- IDEA mappings ---

nmap gf :action GotoFile<CR>
nmap gb :action JumpToLastChange<CR>
nmap gn :action GotoClass<CR>
nmap gm :action RenameElement<CR>
nmap <leader>f :action FileStructurePopup<CR>
nmap <leader>p :action ParameterInfo<CR>
nmap <leader>z :action ToggleDistractionFreeMode<CR>
nmap <leader>e :action RecentFiles<CR>

nmap <leader>l :action ReformatCode<CR>
nmap <leader>o :action OptimizeImports<CR>
nmap <leader>i :action ImplementMethods<CR>
nmap <leader>O :action OverrideMethods<CR>

" nnoremap <M-h> :action PreviousTab<CR>
" nnoremap <M-l> :action NextTab<CR>

nmap <leader>/ :action FindInPath<cr>

